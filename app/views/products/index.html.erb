<h1 class="center">Products</h1>
<div>
  <h3>Form</h3>
  <%# <button class='btn' id='click-form'>Click For Form</button> %>
  <div id="prod-form" method="post">
  <%= form_for :product, html: { id: 'postData' } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :base_price %>
    <%= f.text_field :base_price %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit "Save", class: 'btn'%>
  <% end %>
  </div>
</div>
<div>
  <hr>
  <h3>Products List</h3>
  <button class='btn' id='click-me'>Click To See Products</button>
  <ul id="list-products">
  </ul>
</div>